{
    "name": "herdwatch/stripe-bundle",
    "description": "Symfony bundle to integrate Stripe PHP SDK. Ability to save Stripe objects in database using Doctrine.",
    "keywords": [
        "symfony",
        "bundle",
        "herdwatch",
        "stripe",
        "payment",
        "php",
        "webpayment"
    ],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Aleksey Mirovskyi",
            "email": "mirovskyi@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "symfony/framework-bundle": "^6.4 || ^7.0",
        "symfony/config": "^6.4 || ^7.0",
        "stripe/stripe-php": ">=v16.1.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "doctrine/orm": ">=2.2",
        "phpunit/phpunit": "^10.5",
        "symfony/yaml": "^6.4 || ^7.0",
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "suggest": {
        "doctrine/orm": "If you want to save stripe data in database"
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "target-directory": "vendor-bin",
            "forward-command": true
        },
        "branch-alias": {
            "dev-master": "3.x-dev"
        },
        "symfony": {
            "allow-contrib": false,
            "require": "6.4.* || 7.*"
        }
    },
    "autoload": {
        "psr-4": {
            "Miracode\\StripeBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Miracode\\StripeBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ocramius/package-versions": true,
            "bamarni/composer-bin-plugin": true
        }
    },
    "scripts": {
        "rector": [
            "Composer\\Config::disableProcessTimeout",
            "./vendor-bin/rector/vendor/bin/rector process --no-diffs"
        ],
        "php-cs-fixer": "./vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer fix --verbose --show-progress=dots",
        "phpunit": "./vendor/bin/phpunit"
    }
}
