<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Miracode\StripeBundle\Model\AbstractTaxIdModel">
        <field name="country" column="country" type="string" length="4"/>
        <field name="created" column="created" type="integer" />
        <field name="customer" column="customer" type="string" length="20" nullable="true"/>
        <field name="liveMode" column="livemode" type="boolean" />
        <field name="type" column="type" type="string" length="6" nullable="true"/>
        <field name="value" column="value" type="string" nullable="true"/>
        <field name="verification" column="verification" type="array" nullable="true"/>
        <field name="stripeId" column="stripe_id" type="string" length="30"/>
        <unique-constraints>
            <unique-constraint columns="stripe_id" />
        </unique-constraints>
    </mapped-superclass>

</doctrine-mapping>
