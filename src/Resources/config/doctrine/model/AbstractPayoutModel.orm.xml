<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Miracode\StripeBundle\Model\AbstractPayoutModel">
        <field name="amount" column="amount" type="integer" />
        <field name="created" column="created" type="integer" />
        <field name="arrivalDate" column="arrival_date" type="integer" />
        <field name="currency" column="currency" type="string" length="3"/>
        <field name="description" column="description" type="string" nullable="true"/>
        <field name="liveMode" column="livemode" type="boolean" />
        <field name="metadata" column="metadata" type="array" nullable="true" />
        <field name="type" column="type" type="string" nullable="true"/>
        <field name="status" column="status" type="string" length="30" nullable="true"/>
        <field name="stripeId" column="stripe_id" type="string" length="30"/>
        <unique-constraints>
            <unique-constraint columns="stripe_id" />
        </unique-constraints>
    </mapped-superclass>

</doctrine-mapping>
