<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Miracode\StripeBundle\Model\AbstractRefundModel">
        <field name="amount" column="amount" type="integer" />
        <field name="balanceTransaction" column="balance_transaction" type="string" nullable="true" />
        <field name="charge" column="charge" type="string" />
        <field name="created" column="created" type="integer" />
        <field name="currency" column="currency" type="string" />
        <field name="metadata" column="metadata" type="array" nullable="true" />
        <field name="failureBalanceTransaction" column="failure_balance_transaction" type="string" nullable="true" />
        <field name="failureReason" column="failure_reason" type="string" nullable="true" />
        <field name="reason" column="reason" type="string" nullable="true" />
        <field name="receiptNumber" column="receipt_number" type="string" nullable="true" />
        <field name="status" column="status" type="string" nullable="true" />
        <field name="stripeId" column="stripe_id" type="string" />

        <unique-constraints>
            <unique-constraint columns="stripe_id" name="stripe_id_idx" />
        </unique-constraints>
    </mapped-superclass>

</doctrine-mapping>